<!DOCTYPE html>
<html>
  <head>
    <title>Favlinks</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<header>
  <div class="header">
    <%= link_to root_path,class:'header__header-logo' do %>
    <%= image_tag '/assets/favlinks.png' %>
    <% end %>
    <div class="header__header-contents">
      <% if user_signed_in? %>
      <%= link_to 'About',users_about_path %> |
      <%= link_to '投稿一覧',posts_path %> |
      <%= link_to 'My Page',user_path(current_user) %> |
      <%= link_to "ログアウト",destroy_user_session_path,method: :delete %>
    <% else %>
      <%= link_to 'About',users_about_path %> |
      <%= link_to '投稿一覧',posts_path %> |
      <%= link_to 'Login',new_user_session_path %> |
      <%= link_to 'サインイン',new_user_registration_path %>
    <% end %>
      </div>
    </div>
</header>
<div class="notice">
  <p id="notice"><%= notice %></p>
  </div>
    <%= yield %>
  </body>
</html>
